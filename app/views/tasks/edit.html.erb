<h1>Editing Task</h1>

<%= form_for [@list, @post] do |f| %>
    <%= render 'shared/errors', object: @task %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field check">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>


<%= link_to 'Show', list_task_path(@list, @task) %> |
<%= link_to 'Back', list_tasks_path(@list) %>
